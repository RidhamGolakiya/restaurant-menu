RewriteEngine On

# Serve storage files directly
RewriteRule ^storage(/.*)?$ public/storage$1 [L]

# Serve public assets directly
RewriteCond %{REQUEST_URI} ^/(css|js|images|build|vendor|files|favicon\.ico)
RewriteRule ^(.*)$ public/$1 [L]

# Route everything else to Laravel
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ public/index.php [L]
